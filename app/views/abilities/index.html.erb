<p id="notice"><%= notice %></p>

<h1>Abilities</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Generation</th>
      <th>Ability</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @abilities.each do |ability| %>
      <tr>
        <td><%= ability.name.titlecase %></td>
        <td><%= ability.generation.titlecase %></td>
        <td><%= ability.ability_id %></td>
        <td><button class="btn-link"><%= link_to 'Show', ability %></button></td>
        <td><button class="btn-link"><%= link_to 'Edit', edit_ability_path(ability) %></button></td>
        <td><button class="btn-link"><%= link_to 'Destroy', ability, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%=  paginate @abilities, theme: 'twitter-bootstrap-4', pagination_class: "justify-content-center" %>
<br>

<%= link_to 'New Ability', new_ability_path %>
