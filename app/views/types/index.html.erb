<p id="notice"><%= notice %></p>

<h1>Types</h1>

<table class = table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Generation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @types.each do |type| %>
      <tr>
        <td><%= type.name.titlecase %></td>
        <td><%= type.type_id %></td>
        <td><%= type.generation.titlecase %></td>
        <td><button class="btn-link"><%= link_to 'Show', type %></button></td>
        <td><button class="btn-link"><%= link_to 'Edit', edit_type_path(type) %></button></td>
        <td><button class="btn-link"><%= link_to 'Destroy', type, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

