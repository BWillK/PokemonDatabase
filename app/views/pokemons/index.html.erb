<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-6">

<h1>Pokemon</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Height</th>
      <th>Weight</th>
      <th>Pokemon</th>
      <th>Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pokemons.each do |pokemon| %>
      <tr>

        <td><%= link_to pokemon.name.titlecase, pokemon_path(pokemon.id) %></td>
        <td><%= pokemon.height %></td>
        <td><%= pokemon.weight %></td>
        <td><%= pokemon.pokemon_id %></td>
        <td><%= pokemon.order %></td>
        <td><button class="btn-link"><%= link_to 'Show', pokemon %></button></td>
        <td><button class="btn-link"><%= link_to 'Edit', edit_pokemon_path(pokemon) %></button></td>
        <td><button class="btn-link"><%= link_to 'Destroy', pokemon, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>
   <%=  paginate @pokemons, theme: 'twitter-bootstrap-4', pagination_class: "justify-content-center" %>

<br>

<%= link_to 'New Pokemon', new_pokemon_path %>
  </div>
</div>